<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <chase-distance-m type="double" archive="y"> -20 </chase-distance-m>

  <view n="100">
    <name>Co pilot</name>
    <internal archive="y">true</internal>
    <type>lookfrom</type>
    <config>
      <from-model type="bool">true</from-model>
      <dynamic-view type="bool">true</dynamic-view>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <x-offset-m archive="y"> -0.51 </x-offset-m> <!--right-->
      <y-offset-m archive="y"> -0.13 </y-offset-m> <!--up-->
      <z-offset-m archive="y"> -6.64 </z-offset-m> <!--back-->
      <pitch-offset-deg> -15 </pitch-offset-deg>
      <heading-offset-deg> -5 </heading-offset-deg>
      <default-field-of-view-deg> 70 </default-field-of-view-deg>
    </config>
  </view>

  <view n="101">
    <name>Tail Camera View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.01f</ground-level-nearplane-m>
      <x-offset-m archive="y"> 0.000 </x-offset-m> <!--Right-->
      <y-offset-m archive="y"> 1.700 </y-offset-m> <!--Up-->
      <z-offset-m archive="y"> 4.118 </z-offset-m> <!--Back-->
      <pitch-offset-deg> -5 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 30 </default-field-of-view-deg>
    </config>
  </view>

  <view n="0">
    <internal archive="y">true</internal>
    <config>
      <x-offset-m archive="y">  0.51 </x-offset-m> <!--right-->
      <y-offset-m archive="y"> -0.13 </y-offset-m> <!--up-->
      <z-offset-m archive="y"> -6.64 </z-offset-m> <!--back-->
      <pitch-offset-deg> -15 </pitch-offset-deg>
      <default-field-of-view-deg> 70 </default-field-of-view-deg>
    </config>
  </view>

  <view n="1">
    <config>
      <target-z-offset-m archive="y" type="double"> -5 </target-z-offset-m>
    </config>
  </view>

  <view n="2">
    <config>
      <target-z-offset-m archive="y" type="double"> -5 </target-z-offset-m>
    </config>
  </view>

  <view n="3">
    <config>
      <target-z-offset-m archive="y" type="double"> -5 </target-z-offset-m>
    </config>
  </view>

  <view n="4">
    <config>
      <target-z-offset-m archive="y" type="double"> -5 </target-z-offset-m>
    </config>
  </view>

  <view n="5">
    <config>
      <target-z-offset-m archive="y" type="double"> -5 </target-z-offset-m>
    </config>
  </view>

  <view n="6">
    <config>
      <target-z-offset-m archive="y" type="double"> -5 </target-z-offset-m>
    </config>
  </view>

</PropertyList>

